@model Project.Models.Category

@{
    ViewBag.Title = "Detalji kategorije";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID kategorije
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IDCategory)
        </dd>

        <dt>
            Naziv kategorije
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("<<< Povratak na listu kategorija", "Show")
    @Html.ActionLink("Uredi", "Edit", new { id = Model.IDCategory }, new { @class = "btn btn-primary btn-sm" })
</p>
